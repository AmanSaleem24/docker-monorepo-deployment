{
  "name": "deploy_monorepo_docker",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "db:generate": "cd packages/db && bunx prisma generate && cd ../..",
    "start:web": "cd apps/web && bun run start",
    "start:backend": "cd apps/backend && bun index.ts",
    "start:ws": "cd apps/ws && bun index.ts",
    "db:migrate:deploy": "cd packages/db && bunx prisma migrate deploy && cd ../.."
  },
  "devDependencies": {
    "prettier": "^3.7.4",
    "turbo": "^2.7.6",
    "typescript": "5.9.2"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "bun@1.3.7",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
